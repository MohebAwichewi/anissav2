generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- UPDATED PRODUCT MODEL ---
model Product {
  id        Int      @id @default(autoincrement())
  name      String
  price     Float
  category  String
  stock     Int      @default(0)
  brand     String?
  images    String[] // Now supports multiple images (array)
  createdAt DateTime @default(now())
}

// --- OTHER MODELS (UNCHANGED) ---
model Order {
  id        Int      @id @default(autoincrement())
  customer  String
  item      String
  total     Float
  status    String   @default("En attente")
  date      DateTime @default(now())
}

model Message {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  msg       String   @db.Text
  date      DateTime @default(now())
}

model Admin {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}

model Category {
  id   Int    @id @default(autoincrement())
  name String @unique
}

model GalleryImage {
  id        Int      @id @default(autoincrement())
  url       String   @db.Text
  createdAt DateTime @default(now())
}

model ContactMessage {
  id    Int      @id @default(autoincrement())
  name  String
  email String
  msg   String
  date  DateTime @default(now())
}